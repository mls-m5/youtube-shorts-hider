{
  "manifest_version": 3,
  "name": "Youtube shorts hider",
  "version": "1.0",
  "description": "Hide annoying youtube shorts",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}