{
  "manifest_version": 2,
  "name": "My Custom Plugin",
  "version": "1.0",
  "description": "A simple plugin that hides elements of a specific class",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}